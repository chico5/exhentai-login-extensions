{
	"name": "ExHentai Easy",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Login to ExHentai without all the bullshit",
	"homepage_url": "http://haruhichan.com",
	"browser_action": {
		"default_icon": "img/appicon/32.png",
		"default_popup": "popup.html",
		"default_title": "ExHentai Easy"
	},
	"icons": {
		"16": "img/appicon/16.png",
		"32": "img/appicon/32.png",
		"48": "img/appicon/48.png",
		"128": "img/appicon/128.png"
	},
	"permissions": [
		"contentSettings",
		"cookies",
		"notifications",
		"<all_urls>"
	],
	"update_url": "http://haruhichan.com/projects/ex/update.xml",
	"offline_enabled": false
}